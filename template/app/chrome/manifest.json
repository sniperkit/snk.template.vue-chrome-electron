{
  "manifest_version": 2,
  "name": "{{name}}",
  "short_name": "{{name}}",
  "description": "{{description}}",
  "homepage_url": "http://becauseqa.info",
  "author": "{{author}}",
  "version": "{{version}}",
  "icons": {
    "16": "static/img/16.png",
    "48": "static/img/48.png",
    "128": "static/img/128.png"
  },
  "web_accessible_resources": [
    "static/img/16.png",
    "static/img/48.png",
    "static/img/128.png"
  ],
  "update_url": "http://becauseqa.info/extensions/updates.xml",
  "offline_enabled": true,
  "minimum_chrome_version": "40.0",
  "browser_action": {
    "default_icon": "static/img/16.png",
    "default_title": "{{name}} chrome plugin"
  },
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "notifications"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'  https://fonts.googleapis.com https://code.jquery.com; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "*://*.github.com/*"
      ],
      "run_at":"document_end",
      "js": [
        "static/libs/jquery-3.2.1.min.js",
        "static/js/contentscripts.bundle.js"
      ]
    }
  ]
}
